<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NotAPPhase</title>
    <link rel="stylesheet" href="../public/css/profile/styles.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
</head>

<body>
    <!-- Header / TaskBar -->
    <%- include('./partials/header.ejs') %>

    <div class="container">
        <div class="info">
            <img class="profile-img" src="<%= userStats.s3_profile %> " alt="profile" />
            <div class="profile-info">
                <h1>
                    <%= userName %>
                </h1>
                <!-- statstics -->
                <div class="statistics">
                    <div class="statistics-des">
                        <h3>
                            <%= userStats.follwers.length %> <br />
                            <span><b>Follwers</b></span>
                        </h3>
                        <h3>
                            <%= userStats.lights %><br />
                            <span><b>Lights</b></span>
                        </h3>
                        <h3>
                            <%= userStats.follwing.length %> <br />
                            <span><b>Follwing</b></span>
                        </h3>
                    </div>
                    <%= des %>
                </div>
            </div>
        </div>

        <hr />

        <!-- Gallery -->
        <div class="row">
            <% userWithSecrets.forEach((element) => {%>
            <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
                <img class="w-100 shadow-1-strong rounded mb-4" src="<%= element.s3_file %>" alt="profile_photo" />
            </div>
            <% }) %>
        </div>

        <!-- Modal -->
    </div>

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
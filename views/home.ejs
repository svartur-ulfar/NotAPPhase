            <div class="min-profile">
              <div class="min">
                <a href="/profile">
                  <h1><img src="<%= userStats.s3_profile %>" alt="profile"><%= userName %></h1>
                </a>
                <!-- statistics -->
                <div class="statistics">
                  <h3><%= userStats.follwers.length %><br> <span><b>Follwers</b></span></h3>

</head>

<body>
  <div class="loading">
    <div class="overlay">
<!-- task=bar -->
      <%- include('./partials/header.ejs') %>

      <div class="container">
        <div class="row">
          <div class="box"></div>

          <!-- feed -->
          <%- include('./partials/feed.ejs') %>

